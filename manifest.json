{
    "name": "minAccounting",
    "description": "Minimal accounting application.",
    "version": "0.0.1",
    "manifest_version": 2,
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "icons": {
        "128": "icon_128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; default-src 'self' 'unsafe-inline' chrome-extension-resource:",
    "permissions": [{
        "fileSystem": ["write", "retainEntries", "directory"]
    }]
}
